<div id="zipcode_search">
	<%= form_with url: "/search", method: :get, html: { class: "search_form" }, multipart: true do |form| %>
		<div class="mb-3">
			<%= form.label :query, "Where would you like to grab coffee?" %><br><br>
        <% if location == "Please try a different location!" %>
          <%= form.text_field :query, placeholder: "Please try a different location!", class: "form-control" %>
        <% elsif location  %>
          <%= form.text_field :query, value: location || "Enter a location!", class: "form-control" %>
        <% else %>
          <%= form.text_field :query, placeholder: "Enter a location!", class: "form-control" %>
        <% end %>
			<br>
        <%= button_tag(type: 'submit', class: "btn btn-outline-secondary", title: "Search for Coffee Spots") do %>
          <i class="fas fa-mug-hot"></i>
        <% end %>
		</div>
	<% end %>
</div>

